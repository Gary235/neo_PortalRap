<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Bases">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_bases"
        style="@android:style/Widget.Material.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="5dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:titleTextColor="@color/black"
        app:title="Bases"
        app:menu="@menu/bases_menu"
        app:titleTextAppearance="@style/titlefont_2"

        app:layout_constraintTop_toTopOf="parent"
        />




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_paso4"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="80dp"


        android:src="@drawable/ic_paso_4"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_paso4"

        app:layout_constraintTop_toBottomOf="@id/img_paso4"
        app:layout_constraintLeft_toLeftOf="@id/img_paso4"
        app:layout_constraintRight_toRightOf="@id/img_paso4"
        android:layout_margin="25dp"

        android:text="Paso 4"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black"

        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/btn_anterior_bases"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="100dp"

        android:background="@drawable/redondeado_stroke_violeta"
        android:src="@drawable/ic_flecha_izq"
        android:elevation="5dp"
        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/btn_siguiente_bases"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="100dp"

        android:background="@drawable/redondeado_violeta"
        android:src="@drawable/ic_flecha_der"
        android:elevation="5dp"
        />





</androidx.constraintlayout.widget.ConstraintLayout>