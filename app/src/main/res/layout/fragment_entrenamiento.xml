<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Entrenamiento.viewEntrenamiento"
    android:background="#F4F4F4">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_modo"
        style="@android:style/Widget.Material.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="5dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:titleTextColor="@color/black"

        app:menu="@menu/ayuda_menu"
        app:titleTextAppearance="@style/titlefont_3"
        app:title="Personalizar Entrenamiento"

        app:navigationIcon="@drawable/ic_cruz_negra"
        app:layout_constraintTop_toTopOf="parent"
        />


    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewpagerentrenamiento"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="50dp"
        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layoutentrenamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"

        android:background="@drawable/transparent"
        app:tabBackground="@xml/tab_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"
        app:tabIndicatorAnimationMode="elastic"
        />
</androidx.constraintlayout.widget.ConstraintLayout>