<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Entrenamiento.Frecuencia"
    android:background="#F4F4F4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txttitulofrec"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"

        android:text="Frecuencia"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtsubfrec"

        app:layout_constraintTop_toBottomOf="@id/txttitulofrec"
        app:layout_constraintLeft_toLeftOf="@id/txttitulofrec"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"

        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat_light"
        android:textColor="@color/black"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="154dp"
        android:layout_height="60dp"
        android:id="@+id/btn2s"

        app:layout_constraintTop_toBottomOf="@id/txtsubfrec"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"

        android:text="2s"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/white"
        android:textSize="18dp"

        android:background="@drawable/redondeado_gris"
        android:translationZ="5dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="154dp"
        android:layout_height="60dp"
        android:id="@+id/btn5s"

        app:layout_constraintTop_toBottomOf="@id/txtsubfrec"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginRight="30dp"

        android:text="5s"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/white"
        android:textSize="18dp"

        android:background="@drawable/redondeado_gris"
        android:translationZ="5dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="154dp"
        android:layout_height="60dp"
        android:id="@+id/btn10s"

        app:layout_constraintTop_toBottomOf="@id/btn2s"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"

        android:text="10s"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/white"
        android:textSize="18dp"

        android:background="@drawable/redondeado_gris"
        android:translationZ="5dp"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="154dp"
        android:layout_height="60dp"
        android:id="@+id/btn15s"

        app:layout_constraintTop_toBottomOf="@id/btn5s"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"

        android:text="15s"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/white"
        android:textSize="18dp"

        android:background="@drawable/redondeado_gris"
        android:translationZ="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>