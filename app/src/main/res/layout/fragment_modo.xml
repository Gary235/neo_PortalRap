<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Entrenamiento.Modo"
    android:background="#F4F4F4">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txttitulomodo"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"

        android:text="Modo"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtsubmodo"

        app:layout_constraintTop_toBottomOf="@id/txttitulomodo"
        app:layout_constraintLeft_toLeftOf="@id/txttitulomodo"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"

        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat_light"
        android:textColor="@color/black"

        />


    <ImageView
        android:id="@+id/imgpalabras"
        android:layout_width="100dp"
        android:layout_height="160dp"

        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtsubmodo"

        android:background="@drawable/redondeado_gris"
        android:elevation="10dp"

        />
    <ImageView
        android:id="@+id/drawpalabras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="@id/imgpalabras"
        app:layout_constraintRight_toRightOf="@id/imgpalabras"
        app:layout_constraintTop_toTopOf="@id/imgpalabras"
        app:layout_constraintBottom_toBottomOf="@id/imgpalabras"
        android:layout_marginBottom="30dp"

        android:src="@drawable/ic_palabras"
        app:tint="@color/white"
        android:elevation="10dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtpalabras"

        app:layout_constraintLeft_toLeftOf="@id/imgpalabras"
        app:layout_constraintRight_toRightOf="@id/imgpalabras"
        app:layout_constraintTop_toTopOf="@id/imgpalabras"
        app:layout_constraintBottom_toBottomOf="@id/imgpalabras"
        android:layout_marginTop="45dp"

        android:textColor="@color/white"
        android:text="Palabras"
        android:textSize="13sp"
        android:fontFamily="@font/montserrat_semibold"
        android:elevation="10dp"

        />


    <ImageView
        android:id="@+id/imgobjetos"
        android:layout_width="100dp"
        android:layout_height="160dp"

        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtsubmodo"

        android:background="@drawable/redondeado_gris"
        android:elevation="10dp"
        />
    <ImageView
        android:id="@+id/drawobjetos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="@id/imgobjetos"
        app:layout_constraintRight_toRightOf="@id/imgobjetos"
        app:layout_constraintTop_toTopOf="@id/imgobjetos"
        app:layout_constraintBottom_toBottomOf="@id/imgobjetos"
        android:layout_marginBottom="30dp"

        android:src="@drawable/ic_objetos"
        app:tint="@color/white"
        android:elevation="10dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtobjetos"

        app:layout_constraintLeft_toLeftOf="@id/imgobjetos"
        app:layout_constraintRight_toRightOf="@id/imgobjetos"
        app:layout_constraintTop_toTopOf="@id/imgobjetos"
        app:layout_constraintBottom_toBottomOf="@id/imgobjetos"
        android:layout_marginTop="45dp"

        android:textColor="@color/white"
        android:text="Objetos"
        android:textSize="13sp"
        android:fontFamily="@font/montserrat_semibold"
        android:elevation="10dp"

        />

    <ImageView
        android:id="@+id/imgaleatorio"
        android:layout_width="100dp"
        android:layout_height="160dp"

        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtsubmodo"

        android:background="@drawable/redondeado_gris"
        android:elevation="10dp"

        />
    <ImageView
        android:id="@+id/drawaleatorio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="@id/imgaleatorio"
        app:layout_constraintRight_toRightOf="@id/imgaleatorio"
        app:layout_constraintTop_toTopOf="@id/imgaleatorio"
        app:layout_constraintBottom_toBottomOf="@id/imgaleatorio"
        android:layout_marginBottom="30dp"

        android:src="@drawable/ic_aleatorio_blanco"
        app:tint="@color/white"
        android:elevation="10dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtaleatorio"

        app:layout_constraintLeft_toLeftOf="@id/imgaleatorio"
        app:layout_constraintRight_toRightOf="@id/imgaleatorio"
        app:layout_constraintTop_toTopOf="@id/imgaleatorio"
        app:layout_constraintBottom_toBottomOf="@id/imgaleatorio"
        android:layout_marginTop="45dp"

        android:textColor="@color/white"
        android:text="Aleatorio"
        android:textSize="13sp"
        android:fontFamily="@font/montserrat_semibold"
        android:elevation="10dp"

        />


</androidx.constraintlayout.widget.ConstraintLayout>