<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Usuario.Usuario">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_bases"
        style="@android:style/Widget.Material.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@color/white"
        android:elevation="15dp"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:id="@+id/img_Usuario"
                app:riv_corner_radius="15dp"
                android:adjustViewBounds="true"

                android:elevation="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/foto"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"

                android:layout_marginTop="30dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nombre_usuario"

                android:text="Gary Berkman"
                app:layout_constraintTop_toBottomOf="@id/img_Usuario"
                app:layout_constraintLeft_toLeftOf="parent"

                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="20sp"
                android:textColor="#000"
                />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btn_Favoritos"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_Usuario"
                android:layout_marginRight="90dp"

                android:background="@drawable/redondeado_violeta"
                android:src="@drawable/ic_corazon_lleno"
                />

            <ImageButton
                android:id="@+id/btn_logout"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_marginRight="20dp"
                android:background="@drawable/redondeado_violeta"
                android:paddingStart="5dp"

                android:src="@drawable/ic_logout"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_Usuario" />

            <ImageButton
                android:id="@+id/btn_editar_perfil"
                android:layout_width="34dp"
                android:layout_height="34dp"

                android:layout_marginRight="20dp"
                android:background="@drawable/redondeado_violeta"

                android:src="@drawable/ic_editar"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/nombre_usuario"
                app:layout_constraintBottom_toBottomOf="@id/nombre_usuario"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>


    <androidx.viewpager.widget.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/viewpager_usuario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="212dp"
        android:layout_marginBottom="72dp"
        >


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:tabIndicatorColor="@color/violeta_claro"

            app:tabIconTint="@color/tab_item_icon"
            app:tabTextColor="@color/tab_item_text"
           />


    </androidx.viewpager.widget.ViewPager>



    <ImageButton
        android:id="@+id/btnEntrenar_bases"
        android:layout_width="72dp"
        android:layout_height="72dp"

        android:layout_marginRight="20dp"
        android:layout_marginBottom="86dp"
        android:background="@drawable/circulo_violeta"
        android:src="@drawable/ic_plus"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>